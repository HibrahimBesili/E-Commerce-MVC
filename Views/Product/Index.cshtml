@model IEnumerable<E_Commerce_MVC.Entity.Product>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<section class="content">
    <div class="row">
        <div class="col-xs-12">


            <div class="box">
                <div class="box-header">
                    <h3 class="box-title">Ürün Listesi</h3>
                </div><!-- /.box-header -->

                <br />
                <a class="btn-primary btn-default " href="@Url.Action("Create")"> Yeni Kayıt </a>
                <div class="box-body">
                    <table id="example1" class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                <th>Resim</th>
                                <th>Ürün Adı</th>
                                <th>Onaylı</th>
                                <th>Anasayfa</th>
                                <th>Popüler</th>
                                <th>Kategori Adı</th>
                                <th></th>

                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                            <tr>
                                <td><img src="~/Content/Images/@item.Image" width="80" height="60" /></td>
                                <td>
                                    @item.Pname
                                </td>
                                <td>
                                    @if (item.IsApproaved)
                                    {
                                        <label class="label label-success">Evet</label>
                                    }
                                    else
                                    {
                                        <label class="label label-danger">Hayır</label>
                                    }

                                </td>
                                <td>
                                    @if (item.IsHome)
                                    {
                                        <label class="label label-success">Evet </label>
                                    }
                                    else
                                    {
                                        <label class="label label-danger">Hayır </label>
                                    }

                                </td>
                                <td>
                                    @if (item.IsFeatured)
                                    {
                                        <label class="label label-success">Evet </label>
                                    }
                                    else
                                    {
                                        <label class="label label-danger">Hayır </label>
                                    }

                                </td>
                                <td>
                                    @item.category.Cname

                                </td>
                                <td>
                                    <a class="btn-primary" href="@Url.Action("Edit",new {id=item.Id })"><i class="fa fa-fw fa-edit"></i>Düzenle</a>
                                    <a class="btn-primary" href="@Url.Action("Delete",new {id=item.Id })"><i class="fa fa-fw fa-trash-o"></i>Sil</a>
                                </td>


                            </tr>
                            }


                        </tbody>
                        <tfoot>
                            <tr>
                                <th>Resim</th>
                                <th>Ürün Adı</th>
                                <th>Onaylı</th>
                                <th>Anasayfa</th>
                                <th>Popüler</th>
                                <th>Kategori Adı</th>
                                <th></th>

                            </tr>
                        </tfoot>
                    </table>
                </div><!-- /.box-body -->
            </div><!-- /.box -->
        </div><!-- /.col -->
    </div><!-- /.row -->
</section><!-- /.content -->


